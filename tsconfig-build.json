{
	"compilerOptions": {
	    "module": "es2015",
		"moduleResolution": "node",
		"target": "es5",
		"stripInternal": true,
		"sourceMap": true,
		"inlineSources": true,
		"declaration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"removeComments": false,
		"skipLibCheck": true
	},
	"files": [
		"index.ts"
	],
	"typeRoots": [
		"../node_modules/@types"
	],
	"angularCompilerOptions": {
		"skipMetadataEmit": false,
		"skipTemplateCodegen": true
	}
}